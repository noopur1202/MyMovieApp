<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mymovieapp.DetailActivity">

        <TextView
            android:id="@+id/details_title"
            android:layout_width="match_parent"
            android:layout_height="130sp"
            android:background="@color/DarkSea"
            android:textColor="@android:color/background_light"
            android:textSize="50sp"
            android:paddingLeft="20sp"
            android:gravity="left|center"/>

        <ImageView
            android:id="@+id/details_poster"
            android:layout_width="130sp"
            android:layout_height="180sp"
            android:paddingLeft="20sp"
            android:layout_below="@+id/details_title"/>

        <TextView
            android:id="@+id/details_year"
            android:textSize="25sp"
            android:paddingLeft="40sp"
            android:layout_marginTop="20sp"
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:layout_alignTop="@+id/details_poster"
            android:layout_toRightOf="@+id/details_poster"
            android:layout_toEndOf="@+id/details_poster" />

        <TextView
            android:id="@+id/details_duration"
            android:textSize="20sp"
            android:layout_width="200sp"
            android:layout_height="30sp"
            android:paddingLeft="40sp"
            android:layout_below="@+id/details_year"
            android:layout_alignLeft="@+id/details_year"
            android:layout_alignStart="@+id/details_year" />

        <TextView
            android:id="@+id/details_rating"
            android:textSize="15sp"
            android:layout_width="100sp"
            android:layout_height="20sp"
            android:paddingLeft="40sp"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/details_duration"
            android:layout_alignLeft="@+id/details_duration"
            android:layout_alignStart="@+id/details_duration" />

        <ToggleButton
            android:id="@+id/details_favButton"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:textOff="Mark as Favorite"
            android:textOn="Remove from Favorite"
            android:background="@color/LightSea"
            android:textColor="@color/Dark_gray"
            android:layout_below="@+id/details_rating"
            android:layout_alignLeft="@+id/details_rating"
            android:layout_alignStart="@+id/details_rating"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10sp"/>

       <TextView
           android:id="@+id/details_movieSummary"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/details_poster"
           android:layout_marginLeft="10sp"
           android:layout_marginRight="10sp"
           android:layout_marginTop="20sp"
           android:textSize="14sp"/>

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="7sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_below="@+id/details_movieSummary"/>

        <TextView
            android:id="@+id/trailer_heading"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textSize="20sp"
            android:paddingLeft="10sp"
            android:layout_below="@+id/line1"
            android:gravity="left|center"/>

        <TextView
            android:id="@+id/trailer1"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textSize="15sp"
            android:text="Trailer 1"
            android:gravity="center"
            android:paddingLeft="50sp"
            android:layout_below="@+id/trailer_heading"/>

        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="7sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_below="@+id/trailer1"/>

        <TextView
            android:id="@+id/trailer2"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textSize="15sp"
            android:text="Trailer 2"
            android:gravity="center"
            android:paddingLeft="50sp"
            android:layout_below="@+id/line2"/>
    </RelativeLayout>
</ScrollView>
